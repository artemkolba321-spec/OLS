#!/usr/bin/env bash
# OLS command: lslog


set -euo pipefail
IFS=$'\n\t'

LOG_FILE="$HOME/OLS/logs.log"

# ===== Help =====
show_help() {
	cat <<'EOF'
usage:
    lslog
description:
	This is a small utility 
	for viewing logs.
examples:
	lslog
	lslog | sort | uniq
	lslog | grep EE
EOF
}

# ===== Args =====
case "${1-}" in
    --help)
        show_help
        exit 0
        ;;
esac

# ===== Main =====
if [[ ! -f "$LOG_FILE" ]]; then
    echo "lslog: log file not found: $LOG_FILE" >&2
    exit 1
fi

cat "$LOG_FILE"